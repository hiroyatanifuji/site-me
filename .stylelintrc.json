{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order",
    "stylelint-processor-styled-components",
    "stylelint-config-prettier"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "processor": [
    ["stylelint-processor-styled-components", { "ignoreFiles": ["**/*.css", "**/*.scss"] }]
  ],
  "rules": {
    "value-keyword-case": [
      "lower",
      {
        "ignoreKeywords": [],
        "ignoreProperties": ["breakPoint", "defaultFont"],
        "ignoreFunctions": []
      }
    ]
  }
}